@model FanGuide.Models.Athlete
@{
    ViewBag.Title = "Athlete Details";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>@Model.Name</h2>

<table class="table table-bordered table-hover">
    <thead>
    <tr>
        <th>Property</th>
        <th>Value</th>
    </tr>
    </thead>
    <tbody>
        <tr>
            <td>Name</td>
            <td> @Model.Name</td>
        </tr>
        <tr>
            <td>Sport</td>
            <td> @Model.Sport.Name</td>
        </tr>
        <tr>
            <td>Team/Role | @Html.ActionLink("Change", "ChangeTeam", "Athletes", new { id = Model.Id }, new { @class = "btn btn-primary" })</td>
            <td>
                @if (Model.Team != null)
                {
                    @Model.Team.Name
                    <p>/</p>
                    @Model.TeamRoleId
                }
            </td>
        </tr>
        <tr>
            <td>Height</td>
            <td> @Model.Height</td>
        </tr>
        <tr>
            <td>Weight</td>
            <td> @Model.Weight</td>
        </tr>
        <tr>
            <td>Age</td>
            <td> @Model.Age</td>
        </tr>
        <tr>
            <td>Citizenship</td>
            <td> @Model.Citizenship</td>
        </tr>
        <tr>
            <td>Origin</td>
            <td> @Model.Origin</td>
        </tr>
        <tr>
            <td>Achievements | @Html.ActionLink("Add Achievements", "AddAchievement", "Athletes", new { id = Model.Id }, new { @class = "btn btn-primary" })</td>
            <td><ul>
                @if (Model.Achievements != null)
                {
                    foreach (var achievement in Model.Achievements)
                    {
                        <li>@achievement.Type.ToString()</li>
                    }
                }
            </ul></td>
        </tr>
    </tbody>
</table>


