@model FanGuide.ViewModels.AthleteAddAchievementViewModel
@{
    ViewBag.Title = "Award";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Award the Athlete</h2>

@using (Html.BeginForm("AddAchievement", "Athletes"))
{
    @Html.ValidationSummary(true)
    <div class="form-group">
        @Html.LabelFor(x => x.Achievement)
        @Html.DropDownList("achievement", new SelectList(Model.AchievementsList, "Value", "Text"), "Select Achievement", new { @class = "form-control" })
        @Html.ValidationMessageFor(x => x.Achievement)
    </div>
    @Html.HiddenFor(x => x.Athlete.Id)
    <button type="submit" class="btn btn-primary">Save</button>
    @Html.ActionLink("Back", "Details", "Athletes", new {id = Model.Athlete.Id}, new { @class = "btn btn-primary" })
}

